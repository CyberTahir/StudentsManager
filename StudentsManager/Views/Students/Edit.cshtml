@using DAL.Entities
@model StudentView

@{ 
    string curAction = Model.Id == 0 ? "Create" : "Edit";
    Console.WriteLine("{0}: {1}. {2} {3} {4}", curAction, Model.Id, Model.LastName, Model.Name, Model.Patronymic);
    ViewData["Title"] = curAction;
}

<div>
    <form asp-controller="Students">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" placeholder="Enter last name..." />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter first name..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Patronymic" class="control-label"></label>
            <input asp-for="Patronymic" class="form-control" placeholder="Enter patronymic..." />
            <span asp-validation-for="Patronymic" class="text-danger"></span>
        </div>

        <div class="form-group">
            @if (curAction == "Edit")
            {
                <button class="btn btn-success" asp-action="Edit" asp-route-Id="@Model.Id">Edit</button>
                <button class="btn btn-danger" asp-action="Delete" asp-route-Id="@Model.Id">Delete</button>
            }
            else
            {
                <button class="btn btn-success" asp-action="Create">Create</button>
            }

            <button class="btn btn-info" asp-action="Index">Back</button>
        </div>
    </form>
</div>